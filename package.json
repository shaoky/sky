{
  "name": "sky",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "serve": "vue-cli-service serve",
    "build": "yarn bootstrap && rimraf lib && yarn build:esm-bundle && yarn build:theme && yarn build:esm && yarn build:utils",
    "build:fast": "yarn build:esm && yarn build:theme",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "bootstrap": "yarn && npx lerna bootstrap",
    "build:lib-full": "cross-env LIBMODE=full webpack --config ./build/webpack.config.js",
    "build:esm-bundle": "rollup --config ./build/rollup.config.bundle.js && yarn build:type",
    "build:rollup": "rollup --config ./build/rollup.config.js",
    "build:type": "node build/gen-type.js",
    "build:esm": "node ./build/bincomp.js",
    "build:utils": "cross-env BABEL_ENV=utils babel packages/utils --extensions .ts --out-dir lib/utils",
    "build:theme": "rimraf packages/sass/lib && gulp build --gulpfile packages/sass/gulpfile.js && cp-cli packages/sass/lib lib/css && rimraf packages/sass/lib",
    "lib": "vue-cli-service build --target lib --name sky --dest lib packages/index.ts",
    "storybook": "start-storybook -p 9000"
  },
  "main": "lib/index.esm.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "dependencies": {
    "core-js": "^3.6.5",
    "dayjs": "^1.10.1",
    "element-plus": "^1.0.1-beta.5",
    "lodash": "^4.17.21",
    "vue": "^3.0.9",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.14.0",
    "@storybook/addon-actions": "^6.3.0-alpha.19",
    "@storybook/addon-essentials": "^6.3.0-alpha.19",
    "@storybook/addon-links": "^6.3.0-alpha.19",
    "@storybook/vue3": "^6.3.0-alpha.19",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-0",
    "babel-loader": "^8.2.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "cp-cli": "^2.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "lerna": "^3.22.1",
    "less": "^3.0.4",
    "less-loader": "^5.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "typescript": "~4.1.5",
    "vite": "^1.0.0-rc.13",
    "vue-jest": "^5.0.0-0",
    "vue-loader": "^16.2.0",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
